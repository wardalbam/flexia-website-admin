datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                     String               @id @default(cuid())
  email                  String               @unique
  name                   String?
  hashedPassword         String
  role                   UserRole             @default(ADMIN)
  createdAt              DateTime             @default(now())
  updatedAt              DateTime             @updatedAt
  createdVacatures       Vacature[]           @relation("CreatedByUser")
  lastUpdatedVacatures   Vacature[]           @relation("LastUpdatedByUser")
  applicationHistory     ApplicationHistory[]

  @@map("users")
}

enum UserRole {
  MANAGER
  ADMIN
  SUPER_ADMIN
}

model Category {
  id          String     @id @default(cuid())
  name        String     @unique
  slug        String     @unique
  description String?
  color       String?    @default("#3b82f6")
  icon        String?    @default("Briefcase")
  isActive    Boolean    @default(true)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  vacatures   Vacature[]

  @@map("categories")
}

model Vacature {
  id              String        @id @default(cuid())
  slug            String        @unique
  vacatureNumber  Int           @unique
  title           String
  subtitle        String
  description     String
  longDescription String        @db.Text
  seoContent      String        @db.Text
  requirements    String[]
  benefits        String[]
  categoryId      String?
  category        Category?     @relation(fields: [categoryId], references: [id])
  companyName     String?       @default("Flexia")
  imageKey        String        @default("catering")
  employmentType  String[]
  city            String        @default("Den Haag")
  location        String?       @db.Text
  salary          Float         @default(17.00)
  isActive        Boolean       @default(true)
  archived        Boolean       @default(false)
  publishedAt     DateTime      @default(now())
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  createdById     String?
  createdBy       User?         @relation("CreatedByUser", fields: [createdById], references: [id], onDelete: SetNull)
  lastUpdatedById String?
  lastUpdatedBy   User?         @relation("LastUpdatedByUser", fields: [lastUpdatedById], references: [id], onDelete: SetNull)
  applications    Application[]

  @@map("vacatures")
}

model Application {
  id                String               @id @default(cuid())
  firstName         String
  lastName          String
  email             String
  phone             String
  birthDate         String?
  city              String?
  gender            String?
  experience        String?              @db.Text
  selectedVacatures String[]
  availability      String[]
  status            ApplicationStatus    @default(NEW)
  notes             String?              @db.Text
  source            String               @default("website")
  vacatureId        String?
  vacature          Vacature?            @relation(fields: [vacatureId], references: [id], onDelete: SetNull)
  isGeneral         Boolean              @default(false)
  motivation        String?              @db.Text
  createdAt         DateTime             @default(now())
  updatedAt         DateTime             @updatedAt
  history           ApplicationHistory[]

  @@map("applications")
}

model ApplicationHistory {
  id            String      @id @default(cuid())
  applicationId String
  application   Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  type          String      // "STATUS_CHANGE" or "NOTE"
  oldStatus     String?
  newStatus     String?
  note          String?     @db.Text
  userId        String?
  user          User?       @relation(fields: [userId], references: [id], onDelete: SetNull)
  userName      String?
  createdAt     DateTime    @default(now())

  @@map("application_history")
}

enum ApplicationStatus {
  NEW
  REVIEWED
  CONTACTED
  INTERVIEW_SCHEDULED
  HIRED
  REJECTED
  WITHDRAWN
}
